<?php
session_start();
include 'config.php'; 

$login_error = ''; 

if (isset($_GET['cadastro_sucesso']) && $_GET['cadastro_sucesso'] == 'true') {
    $login_error = "Cadastro realizado com sucesso! Faça login."; 
}

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $username_email = $_POST['usuario'] ?? '';
    $password = $_POST['senha'] ?? '';

    $stmt_user = $conn->prepare("SELECT id, nome_completo, email, senha FROM usuarios WHERE email = ?");
    if ($stmt_user) {
        $stmt_user->bind_param("s", $username_email);
        $stmt_user->execute();
        $result_user = $stmt_user->get_result();
        if ($result_user->num_rows === 1) {
            $user = $result_user->fetch_assoc();
            if (password_verify($password, $user['senha'])) { 
                $_SESSION['usuario_logado'] = $user['nome_completo'];
                $_SESSION['usuario_id'] = $user['id'];
                header("Location: index.php"); 
                exit();
            } else {
                $login_error = "Usuário ou senha incorretos.";
            }
        } else {
            $login_error = "Usuário ou senha incorretos.";
        }
        $stmt_user->close();
    } else {
        $login_error = "Erro na preparação da declaração de login: " . $conn->error;
    }
}
$conn->close();
?>
