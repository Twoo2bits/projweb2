            <p><strong>CEP:</strong> <?php echo $cep; ?></p>
            <p><strong>Cidade:</strong> <?php echo $cidade; ?></p>
            <p><strong>Estado:</strong> <?php echo $estado; ?></p>
        </div>

        <div class="confirmation-section order-summary-details">
            <h3><i class="fas fa-shopping-cart"></i> Resumo do Pedido</h3>
            <?php if (!empty($order_items)): ?>
                <ul>
                    <?php
                    if ($is_pc_config) {
                        foreach ($order_items as $item_key => $details) {
                            $display_name = str_replace(['-', '_'], ' ', $item_key);
                            $display_name = ucwords($display_name);
                            echo '<li><strong>' . htmlspecialchars($display_name) . ':</strong> <span>' . htmlspecialchars($details['descricao']) . ' (R$ ' . number_format($details['preco'], 2, ',', '.') . ')</span></li>';
                        }
                    } else { 
                        foreach ($order_items as $item) {
                            echo '<li><strong>' . htmlspecialchars($item['nome']) . ':</strong> <span>R$ ' . number_format($item['preco'], 2, ',', '.') . '</span></li>';
                        }
                    }
                    ?>
                </ul>
                <div class="total-price">Total: R$ <span id="summaryTotalPrice"><?php echo number_format($total_price, 2, ',', '.'); ?></span></div>
            <?php else: ?>
                <p>Nenhum item foi encontrado no seu pedido. Por favor, verifique se você adicionou itens ao carrinho ou montou seu PC.</p>
                <div class="total-price">Total: R$ <span id="summaryTotalPrice">0,00</span></div>
            <?php endif; ?>
