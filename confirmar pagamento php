<?php
session_start();
include 'config.php'; 


if (!isset($_SESSION['usuario_logado']) || !isset($_SESSION['usuario_id'])) {
    
    header("Location: login.php");
    exit();
}

$nome = htmlspecialchars($_POST['nome'] ?? 'N/A');
$email = htmlspecialchars($_POST['email'] ?? 'N/A');
$telefone = htmlspecialchars($_POST['telefone'] ?? 'N/A');
$endereco = htmlspecialchars($_POST['endereco'] ?? 'N/A');
$cep = htmlspecialchars($_POST['cep'] ?? 'N/A');
$cidade = htmlspecialchars($_POST['cidade'] ?? 'N/A');
$estado = htmlspecialchars($_POST['estado'] ?? 'N/A');
$metodo_pagamento = htmlspecialchars($_POST['pagamento'] ?? 'N/A');
$numero_cartao = htmlspecialchars($_POST['numero-cartao'] ?? 'N/A');
$validade_cartao = htmlspecialchars($_POST['validade-cartao'] ?? 'N/A');
$cvv = htmlspecialchars($_POST['cvv-cartao'] ?? 'N/A');
$nome_cartao = htmlspecialchars($_POST['nome-cartao'] ?? 'N/A');

$order_items = [];
$total_price = 0;
$is_pc_config = false;

if (isset($_SESSION['configuracao_pc']) && !empty($_SESSION['configuracao_pc'])) {
    $order_items = $_SESSION['configuracao_pc'];
    foreach ($order_items as $details) {
        $total_price += $details['preco'];
    }
    $is_pc_config = true;
} else if (isset($_SESSION['carrinho_de_compras']) && !empty($_SESSION['carrinho_de_compras'])) {
    $order_items = $_SESSION['carrinho_de_compras'];
    foreach ($order_items as $item) {
        $total_price += $item['preco'];
    }
}

if (!empty($order_items)) {
    $minutos_aleatorios = rand(1, 5);
    $data_previsao_entrega = date('Y-m-d H:i:s', strtotime("+$minutos_aleatorios minutes"));
    $status_inicial = 'A Caminho';
    $usuario_id = $_SESSION['usuario_id'];

    $conn->begin_transaction();

    try {
        $stmt_pedido = $conn->prepare("INSERT INTO pedidos (usuario_id, data_previsao_entrega, status, valor_total) VALUES (?, ?, ?, ?)");
        $stmt_pedido->bind_param("issd", $usuario_id, $data_previsao_entrega, $status_inicial, $total_price);
        $stmt_pedido->execute();
        $pedido_id = $conn->insert_id; 

        $stmt_item = $conn->prepare("INSERT INTO pedido_itens (pedido_id, produto_nome, produto_preco, produto_imagem) VALUES (?, ?, ?, ?)");

        if ($is_pc_config) {
            foreach ($order_items as $key => $details) {
                $nome_item = ucwords(str_replace(['-', '_'], ' ', $key)) . ": " . $details['descricao'];
                $preco_item = $details['preco'];
                $imagem_item = $details['imagem_path'] ?? 'pc_component.png'; 
                $stmt_item->bind_param("isds", $pedido_id, $nome_item, $preco_item, $imagem_item);
                $stmt_item->execute();
            }
        } else {
            foreach ($order_items as $item) {
                $nome_item = $item['nome'];
                $preco_item = $item['preco'];
                $imagem_item = $item['imagem'];
                $stmt_item->bind_param("isds", $pedido_id, $nome_item, $preco_item, $imagem_item);
                $stmt_item->execute();
            }
        }
        
        $acao_historico = "Realizou a compra do pedido #" . $pedido_id;
        $stmt_hist = $conn->prepare("INSERT INTO historico_atividades (usuario_id, acao) VALUES (?, ?)");
        $stmt_hist->bind_param("is", $usuario_id, $acao_historico);
        $stmt_hist->execute();

        $conn->commit();

        if ($is_pc_config) {
            unset($_SESSION['configuracao_pc']);
        } else {
            unset($_SESSION['carrinho_de_compras']);
        }

    } catch (Exception $e) {
        $conn->rollback();
        die("Erro ao processar o pedido. Por favor, tente novamente. Erro: " . $e->getMessage());
    }
}

