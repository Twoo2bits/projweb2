<?php
session_start();
include 'config.php'; 

$categorias_nome = [
    "smartwatch"        => "Smartwatches",
    "headset"           => "Headsets",
    "automacao"         => "Automação Residencial",
    "mouse"             => "Mouses e Teclados",
    "placa-video"       => "Placas de Vídeo",
    "consoles"          => "Consoles & Jogos",
    "hardware"          => "Componentes de Hardware",
    "perifericos"       => "Periféricos Essenciais",
    "placa-mae"         => "Placas Mãe",
    "memoria-ram"       => "Memórias RAM",
    "ssd"               => "Armazenamento SSD/HD",
    "tv"                => "Smart TVs e Monitores",
    "acessorios"        => "Acessórios e Gadgets",
    "baterias"          => "Carregadores & Baterias"
];

$produtos_para_exibir = [];
$titulo_pagina = "Todos os Produtos";

$categoria_selecionada = $_GET['categoria'] ?? '';
$termo_busca = $_GET['search'] ?? '';

$sql = "SELECT id, nome, descricao, preco, preco_promocional, imagem_url, categoria FROM produtos WHERE 1=1";
$params = [];
$types = "";

if (!empty($categoria_selecionada) && isset($categorias_nome[$categoria_selecionada])) {
    $sql .= " AND categoria = ?";
    $params[] = $categoria_selecionada;
    $types .= "s";
    $titulo_pagina = $categorias_nome[$categoria_selecionada];
}

if (!empty($termo_busca)) {
    $sql .= " AND (nome LIKE ? OR descricao LIKE ?)";
    $params[] = "%" . $termo_busca . "%";
    $params[] = "%" . $termo_busca . "%";
    $types .= "ss";
    $titulo_pagina = "Resultados para: \"" . htmlspecialchars($termo_busca) . "\"";
}

$sql .= " ORDER BY nome ASC";

$stmt = $conn->prepare($sql);

if ($stmt) {
    if (!empty($params)) {
        $stmt->bind_param($types, ...$params);
    }
    $stmt->execute();
    $result = $stmt->get_result();
    while ($row = $result->fetch_assoc()) {
        $produtos_para_exibir[] = $row;
    }
    $stmt->close();
} else {
    $message = "Erro ao carregar produtos: " . $conn->error;
    error_log($message);
}

$conn->close();
?>
