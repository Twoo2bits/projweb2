                <?php

                $total_price = 0;
                $items_to_display = [];

                if (isset($_POST['componentes']) && is_array($_POST['componentes']) && isset($_POST['total_montagem'])) {
                    $_SESSION['configuracao_pc'] = []; 
                    foreach ($_POST['componentes'] as $componente_nome => $dados) {
                        $_SESSION['configuracao_pc'][$componente_nome] = [
                            'descricao' => $dados['descricao'],
                            'preco' => (float)$dados['preco']
                        ];
                    }
                    $_SESSION['total_configuracao_pc'] = (float)$_POST['total_montagem'];

                    unset($_SESSION['carrinho_de_compras']); 
                }
                else if (isset($_SESSION['configuracao_pc']) && !empty($_SESSION['configuracao_pc'])) {
                }
                else if (isset($_SESSION['carrinho_de_compras']) && !empty($_SESSION['carrinho_de_compras'])) {
                }

                if (isset($_SESSION['configuracao_pc']) && !empty($_SESSION['configuracao_pc'])) {
                    $items_to_display = $_SESSION['configuracao_pc'];
                    echo '<ul id="order-list">';
                    foreach ($items_to_display as $item_key => $details) {
                        $display_name = str_replace(['-', '_'], ' ', $item_key);
                        $display_name = ucwords($display_name);
                        echo '<li data-item-key="' . htmlspecialchars($item_key) . '" data-item-price="' . htmlspecialchars($details['preco']) . '">';
                        echo '<strong>' . htmlspecialchars($display_name) . ':</strong> <span>' . htmlspecialchars($details['descricao']) . ' (R$ ' . number_format($details['preco'], 2, ',', '.') . ')</span>';
                        echo '<button type="button" class="remove-item-btn" data-item-type="config" data-item-id="' . htmlspecialchars($item_key) . '"><i class="fas fa-trash-alt"></i></button>';
                        echo '</li>';
                        $total_price += $details['preco'];
                    }
                    echo '</ul>';
                    echo '<p style="margin-top:15px; color:#ccc;">(Este é o resumo da sua configuração de PC)</p>';
                } else if (isset($_SESSION['carrinho_de_compras']) && !empty($_SESSION['carrinho_de_compras'])) {
                    $items_to_display = $_SESSION['carrinho_de_compras'];
                    echo '<ul id="order-list">';
                    foreach ($items_to_display as $index => $item) {
                        echo '<li data-item-index="' . $index . '" data-item-price="' . htmlspecialchars($item['preco']) . '">';
                        echo '<strong>' . htmlspecialchars($item['nome']) . ':</strong> <span>R$ ' . number_format($item['preco'], 2, ',', '.') . '</span>';
                        echo '<button type="button" class="remove-item-btn" data-item-type="cart" data-item-id="' . $index . '"><i class="fas fa-trash-alt"></i></button>';
                        echo '</li>';
                        $total_price += $item['preco'];
                    }
                    echo '</ul>';
                } else {
                    echo '<p id="empty-order-message">Nenhum item adicionado ao pedido. Por favor, volte e adicione itens ao carrinho ou monte seu PC.</p>';
                }
                ?>
                <div class="total-price">Total: R$ <span id="summaryTotalPrice"><?php echo number_format($total_price, 2, ',', '.'); ?></span></div>
            </div>
